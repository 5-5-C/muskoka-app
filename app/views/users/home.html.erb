
<% if current_user %>

<div class="container">

  <h1> Welcome back, <%= current_user.name %> ! </h1>

</div>

<% else %>


  <section class="top-section">
    <div class="logo col-md-6 col-md-offset-3">
      <%= image_tag("http://res.cloudinary.com/dx3z90dgl/image/upload/v1483451983/RTO12Logo_Angled-01_a4euwt.svg") %>
    </div>
  </section>

  <section class="your-adventure">
  </section>

  <section class="enter-to-win">
    <h1>ENTER TO WIN</h1>
    <div class="signup-form">
