          <span class="hover-share">SHARE</span><br>
          <i class="fa fa-instagram" aria-hidden="true"></i>
          <i class="fa fa-facebook" aria-hidden="true"></i>
          <i class="fa fa-twitter" aria-hidden="true"></i>
        </div>
      </div>
    <% end %>
    </div>
    <div class="row flex-md-bottom">
    <% @entries.offset(4).last(2).each do |entry| %>
      <div class="col-md-6 image-block">
        <%= image_tag(entry.filter) %>
        <div class="hover-content">
          <span class="hover-user"><%= entry.user.name %></span><br>
          <span class="hover-title"><h3>TITLE HEADER POST</h3></span><br>
