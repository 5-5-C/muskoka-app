          <span class="hover-votes"><h3><i class="fa fa-heart-o" aria-hidden="true"></i><%= entry.votes.where(email_confirmed: true).count %> VOTES </h3></span><br>
        </div>
        <div class="hover-content-bottom">
          <span class="hover-share">SHARE</span><br>
