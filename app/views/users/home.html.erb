        </div>
        <div class="hover-content-bottom-right">
          <%= link_to "SEE MORE", admin_index_path %>
        </div>
      </div>
    <% end %>
    </div>
    <div class="row flex-md-bottom">
    <% @entries.offset(2).last(2).each do |entry| %>
