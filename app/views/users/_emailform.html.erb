<%= form_for(@email, url: email_index_path) do |f| %>

  <% if @email.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-8 email-form">
    <div class="field">
      <%= f.text_field :email, placeholder: "Email", :class => "email" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="main-page">
      <%= f.submit 'Submit' %>
      <% end %>
    </div>
  </div>
  <div class="field t_c">
    <h5>By clicking Submit you acknowledge and agree to our <a class="text-link" href="#">Terms & Conditions</a></h5>
    <%#= f.label :terms_of_service %>
    <%#= f.check_box :terms_of_service %>
  </div>
