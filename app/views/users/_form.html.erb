<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-8 email-form">
    <div class="field">
      <%= f.text_field :email, placeholder: "Email", :class => "email" %>
    </div>
  </div>
  <div class="col-md-4 submit-form">
    <div class="main-page">
      <%= f.submit 'Submit' %>
      <% end %>
    </div>
  </div>
