<div class="row">
<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-lg-4 email-form">
    <div class="field">
      <%= f.text_field :email, placeholder: "Email", :class => "email" %>
    </div>
  </div>
  <div class="col-lg-2 col-sm-4 submit-form">
    <div class="main-page">
      <%= f.submit 'Enter Now' %>
    </div>
  </div>
  <div class="col-lg-offset-1 col-lg-5 col-sm-8 facebook-login">
    <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook">
      <span class="fa fa-facebook sign-in-facebook"></span> Or Sign up with Facebook
    </a>
  </div>
</div>
<div class="t_c home-page-agreement" id="enter-now">
  <h5 class="home-checkbox-text">By clicking Submit you acknowledge and agree to our <a class="text-link" href="/rules">Contest Terms and Conditions</a> and <a class="text-link" href="/privacy">Privacy Policy</a></h5>
</div>
<% end %>
