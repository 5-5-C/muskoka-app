<div class="container-fluid entry-show-main">

  <div class="col-md-8 col-md-offset-2 this-is">
    <div class="row this-is-row">
      <div class="col-md-2 left-bracket">
        <%= image_tag("http://res.cloudinary.com/dx3z90dgl/image/upload/v1483477142/Brackets-05_vx1mwe.svg") %>
      </div>
      <div class="col-md-4 this-is-text">
        <h1>This is<br>
           <%= @entry.name.partition(" ").first %>'s</h1>
      </div>
      <div class="col-md-4 maple-leaf">
        <%= image_tag("http://res.cloudinary.com/dx3z90dgl/image/upload/v1483475882/RTO12Logo_01-03_qybe52.svg") %>
      </div>
      <div class="col-md-2 right-bracket">
        <%= image_tag("http://res.cloudinary.com/dx3z90dgl/image/upload/v1483477142/Brackets-08_inh4io.svg") %>
      </div>
    </div>
  </div>

  <% if @entry.filter %>

  <style media="screen">
    .entry-show-main { background-image: url(<%= @entry.filter %>); }
  </style>

  <% else %>

  <style media="screen">
    .entry-show-main { background-image: url(<%= @entry.avatar_url %>); }
  </style>

  <% end %>

</div>

<div class="container-fluid entry-show-main-bottom">
  <div class="row entry-show-bottom">
    <div class="col-md-5 col-md-offset-1 entry-image-focus">
      <% if @entry.filter %>
        <%= image_tag(@entry.filter) %>
      <% else %>
        <%= image_tag(@entry.avatar_url) %>
      <% end %>
    </div>
    <div class="col-md-5 entry-story">
      <h1>Story Title</h1>
      <%= @entry.story %>
      <h4><em>- <%= @entry.name %></em></h4>
    </div>
    <%= link_to(entry_votes_path(@entry), :method => 'post') do %>
  </div>

  <div class="col-md-5 col-md-offset-1 voting status">
    <div class="vote-count row">
      <h2>Total Votes: <%= @entry.votes.count %></h2>
    </div>
    <% if current_user.vote %>
      <% if current_user.vote.entry_id == @entry.id %>
        <h1>Voted</h1>
      <% end %>
      <h3>You have already cast your vote. To delete your previous vote, visit your profile page.</h3>
    <% elsif current_user.entry == @entry %>
      <h2>This is your submission </h2>
    <% else %>
    <div class="row">
      <%= form_for [@entry, @vote] do |f| %>
          <%= f.submit "Vote for #{@entry.name.partition(" ").first}", id: "vote-for" %>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
